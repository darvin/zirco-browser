<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:padding="3dp"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content">
 	
 	<ImageView android:src="@drawable/stat_sys_download"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top" />
 	
 	<LinearLayout 	
 		android:layout_width="fill_parent"
 		android:layout_height="wrap_content"
 		android:orientation="vertical">
 	
 		<TextView
 			android:id="@+id/DownloadFileNameText"
 			android:text="@+id/DownloadFileNameText"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:layout_marginLeft="3dip"
 			android:textSize="16sp"></TextView>
 	
 		<TextView android:id="@+id/DownloadUrlText"
	 		android:text="@+id/DownloadUrlText"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:textSize="10sp"
 			android:layout_marginLeft="3dip"
 			android:ellipsize="end"
        	android:singleLine="true"></TextView>
 	
 		<LinearLayout
 			android:layout_height="wrap_content"
 			android:layout_width="fill_parent">
 			<TextView
 				android:id="@+id/DownloadProgressText"
 				android:text="@+id/DownloadProgressText"
 				android:layout_width="wrap_content"
 				android:layout_height="fill_parent"
	 			android:gravity="center_vertical"
 				android:layout_marginLeft="3dip"
 				android:textSize="12sp"></TextView>
 			
 			<ProgressBar android:id="@+id/DownloadProgress"
 				android:layout_height="wrap_content"
 				android:layout_width="fill_parent"
 				android:indeterminate="false"
 				style="@android:style/Widget.ProgressBar.Horizontal"
 				android:layout_marginLeft="3dip"
 				android:layout_marginRight="3dip"
 				android:layout_marginTop="3dip"></ProgressBar>

 		</LinearLayout>
 	
 	</LinearLayout>

</LinearLayout>
